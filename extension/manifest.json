{
  "manifest_version": 3,
  "name": "LambdaTrip - AI Landmark Analyzer",
  "version": "1.0.0",
  "description": "Analyze landmarks in images using AI-powered travel insights",
  "permissions": [
    "activeTab",
    "contextMenus",
    "storage",
    "scripting",
    "offscreen"
  ],
  "host_permissions": [
    "https://tbj0hc15u4.execute-api.us-east-1.amazonaws.com/*",
    "https://lambdatrip.web.app/*",
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["styles.css"]
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "LambdaTrip - AI Landmark Analyzer"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
} 